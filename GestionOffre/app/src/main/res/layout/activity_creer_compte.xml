<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:gravity="center"

    tools:context=".CreerCompteActivity">
    <ImageView
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/computer"/>
    <TextView
        android:id="@+id/title_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:text="Gestion Offre"
        android:textAlignment="center"
        android:textColor="@color/colorPrimary"
        android:textSize="30dp"
        android:textStyle="bold" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"

        android:background="@drawable/edt_shape"
        android:padding="10dp"
        android:hint="Nom"
        android:id="@+id/edtnom"
        android:textColorHint="@color/colorPrimary"
        android:textColor="@color/colorPrimaryDark"
        android:drawableTint="@color/colorPrimary"
        android:drawableRight="@drawable/ic_account_box_black_24dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"

        android:background="@drawable/edt_shape"
        android:padding="10dp"
        android:hint="Prénom"
        android:id="@+id/edtprenom"
        android:textColorHint="@color/colorPrimary"
        android:textColor="@color/colorPrimary"
        android:drawableTint="@color/colorPrimary"
        android:drawableRight="@drawable/ic_account_box_black_24dp"/>


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"

        android:background="@drawable/edt_shape"
        android:padding="10dp"
        android:hint="E-mail"
        android:id="@+id/edtemail"
        android:textColorHint="@color/colorPrimary"
        android:textColor="@color/colorPrimary"
        android:inputType="textEmailAddress"
        android:drawableTint="@color/colorPrimary"
        android:drawableRight="@drawable/ic_email_black_24dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"

        android:background="@drawable/edt_shape"
        android:padding="10dp"
        android:hint="Télèphone"
        android:id="@+id/edtphone"
        android:inputType="number"
        android:textColorHint="@color/colorPrimary"
        android:textColor="@color/colorPrimary"
        android:drawableTint="@color/colorPrimary"
        android:drawableRight="@drawable/ic_phone_black_24dp"/>



    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"

        android:background="@drawable/edt_shape"
        android:padding="10dp"
        android:hint="Mot de passe"
        android:textColor="@color/colorPrimary"
        android:inputType="textPassword"
        android:id="@+id/edtpassword"
        android:textColorHint="@color/colorPrimary"
        android:drawableTint="@color/colorPrimary"
        android:drawableRight="@drawable/ic_lock_black_24dp"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"

        android:background="@drawable/edt_shape"
        android:padding="10dp"
        android:hint="Lien drive de votre cv"
        android:textColor="@color/colorPrimary"
        android:inputType="textPassword"
        android:id="@+id/edt_cv"
        android:textColorHint="@color/colorPrimary"
        android:drawableTint="@color/colorPrimary"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="S'inscrire"
        android:background="@drawable/whiteroundedshape"
        android:textColor="#fff"
        android:id="@+id/btn_register"
        android:paddingRight="10dp"
        android:layout_gravity="right"
        android:layout_margin="8dp"
        android:layout_marginBottom="5dp"
        android:textAllCaps="false"
        android:textSize="20dp"
        />
</LinearLayout>