<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:id="@+id/linearlayoutcandidate"
    android:background="@drawable/layout_background"
    android:paddingLeft="3dp"
    android:layout_margin="3dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="10dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="txt_nom"
            android:id="@+id/txt_nom"
            android:textColor="@color/colorPrimaryDark"
            android:textStyle="bold"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="12dp"
            android:text="txt_prenom"
            android:background="#9ba4b4"
            android:textColor="#fff"
            android:drawablePadding="3dp"
            android:textStyle="bold"
            android:id="@+id/txt_prenom"
            android:padding="4dp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="txt_email"
            android:background="@color/colorPrimaryDark"
            android:textColor="#fff"
            android:drawablePadding="3dp"
            android:id="@+id/txt_email"
            android:textSize="12dp"
            android:padding="4dp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="12dp"
            android:text="txt_telephone"
            android:background="#9ba4b4"
            android:textColor="#fff"
            android:drawablePadding="3dp"
            android:textStyle="bold"
            android:id="@+id/txt_telephone"
            android:padding="4dp"
            />
    </LinearLayout>


</LinearLayout>